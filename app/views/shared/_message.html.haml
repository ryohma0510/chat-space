%li.chat-message
  .chat-message__header
    %p.chat-message__name
      = message.user.name
    %p.chat-message__time
      = message.created_at.strftime('%Y年%m月%d日 %H:%M:%S')
  %p.chat-message__body
    - if message.content.present? && message.image.present?
      = message.content
      %br
      = image_tag message.image.to_s
    - elsif message.content.present?
      = message.content
    - else
      = image_tag message.image.to_s
