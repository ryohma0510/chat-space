.chat
  .chat-side
    .chat-user
      %h5 ryoma
      .chat-user__actions
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o
        = link_to edit_user_registration_path do
          %i.fa.fa-cog
    %ul.chat-groups
      - @groups.each do |group|
        %li.chat-group
          %a.chat-group__link{ href: group_path(group.id) }
            %p.chat-group__name
              = group.name
            %p.chat-group__message 確認用メッセージ
