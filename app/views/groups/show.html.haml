.chat
  = render partial: 'shared/chat-side'

  .chat-main
    .chat-header
      .chat-header--left
        %h2
          = @group.name
        %p.chat-header__users
          Members:
          - @users.each do |user|
            = user[:name]
          %span.chat-header__user
      .chat-header--right
        = link_to edit_group_path(@group.id), class: 'chat-header__edit-btn' do
          Edit
    .chat-body
      %ul.chat-messages
        %li.chat-message
          .chat-message__header
            %p.chat-message__name ryoma
            %p.chat-message__time 2017/03/17 14:20:06
          %p.chat-message__body テストメッセージです
    .chat-footer
      %form.new-message
        .chat-footer__body
          %textarea{ placeholder: 'メッセージを入力してください' }
          %label{ for: 'file' }
            %input{ type: 'file', id: 'file', style: 'display:none;' }
            %i.fa.fa-image
        %input{ type: 'submit', value: 'Send', id: 'chat-footer__btn' }
