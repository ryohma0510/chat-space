$(function() {
  function buildHTML(message) {
    var html = $('<li class="chat-message">').append('<p class="chat-message__name"> </p>').append('<p class="chat-message__time"> </p>').append('<p class="chat-message__body"> </p>');
    return html;
  }

  $('#chat-footer__btn').on('submit', function(e) {
    e.preventDefault();
    var textField = $('.chat-footer__body__text-field');
    var todo = textField.val();
    $.ajax({
      type: 'POST',
      url: location.href,
      data: {
        message: {
          content: message
        }
      },
      dataType: 'json'
    })
    .done(function(data) {
      var html = buildHTML(data);
      $('.chat-messages').append(html);
      textField.val('');
    })
    .fail(function() {
      alert('error');
    });
  });
});
